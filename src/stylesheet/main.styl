@font-face {
font-family: "Lora";
url("src/assets/fonts/Lora/Lora-VariableFont_wght.ttf") format("truetype");
}

html, body {
    height: 100%;
    width: 100%;
    font-size: 100%;
    font-family: Lora;
    font-weight: lighter;
    background-color: #262626;
}

html, body {
  margin: 0;
  padding: 0;
}

html {
  overflow: hidden;
}

:root {
  --app-height: 100%;
}

html {
  overflow: hidden;
}

html,body {
  overflow: hidden;
  user-select: none;
  * {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-tap-highlight-color: transparent;
  }
}

body {
  padding: 0;
  margin: 0;
  height: 100vh;
  width: 100%;
  position: fixed;
  @media not all and (hover:hover) {
    height: var(--app-height);
  }
}

.main-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.main-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

#canvas-overlay {
  color: white;
	position: absolute;
	top: 0%;
  height: 100%;
	width: 100%;
	text-align: center;
	z-index: 1;
	display:block;

}

#title{
  font-size: 100px;
  margin-top: 10%;
  margin-bottom: 1px;
}
#subTitle {
  margin: 0px;
}